<Window x:Class="W26W5WpfControls.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:W26W5WpfControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas>
        <StackPanel Height="91" Width="155" Canvas.Left="30" Canvas.Top="35" Background="#FFC5F1B0">
            <Button Content="Button 1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            <Button Content="Button 2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
        </StackPanel>
        <Image Height="91" Canvas.Left="33" Canvas.Top="145" Width="149" Source="/Car.png"/>

        <GroupBox Height="115" Header="Hobbies" Width="152" Canvas.Left="33" Canvas.Top="252">
            <StackPanel>
                <CheckBox x:Name="chkSinging" Content="Singing" Margin="5"/>
                <CheckBox x:Name="chkTravelling" Content="Travelling" Margin="5"/>
                <CheckBox x:Name="chkRiding" Content="Bike Riding" Margin="5"/>
            </StackPanel>
        </GroupBox>
        <Button x:Name="btnGetHobbies" Content="Get Hobbies" Canvas.Left="201" Canvas.Top="264" HorizontalAlignment="Left" VerticalAlignment="Center" Width="102" Click="btnGetHobbies_Click"/>
        <ComboBox x:Name="cmbCities" Canvas.Left="252" Canvas.Top="34" Width="120">
            <ComboBoxItem Content="Toronto"/>
            <ComboBoxItem Content="Paris"/>
            <ComboBoxItem Content="London"/>
            <ComboBoxItem Content="Nairobi"/>
            <ComboBoxItem Content="Tokyo"/>
            <ComboBoxItem Content="Sydney"/>
        </ComboBox>
        <Button x:Name="btnGetCity" Content="Get City" Canvas.Left="380" Canvas.Top="34" HorizontalAlignment="Left" VerticalAlignment="Center" Width="78" Click="btnGetCity_Click"/>
    </Canvas>
</Window>
